---
const { title } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
---
<header class="site-title">
  <div class="logo">FL</div>
  <div>
    <h1>{title}</h1>
    <p class="lead">A minimal Flutter app template for cross-platform development</p>
    <nav class="nav">
      <a href={`${base}`} class="active">Home</a>
      <a href={`${base}about`}>About</a>
      <a href={`${base}install`}>Install</a>
      <a href={`${base}releases`}>Releases</a>
      <a href="https://github.com/cmwen/min-android-app-template" target="_blank" rel="noopener">Repository</a>
    </nav>
  </div>
</header>
